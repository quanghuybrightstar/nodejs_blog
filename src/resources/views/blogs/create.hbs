<div class="mt-4">
    <form method="POST" action="/blogs/store">
        <div class="mb-3">
            <label for="title" class="form-label">Tiêu đề</label>
            <input
                type="text"
                class="form-control"
                id="title"
                aria-describedby="emailHelp"
                name="title"
                maxlength="150"
            />
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <textarea
                type="text"
                class="form-control"
                id="description"
                aria-describedby="emailHelp"
                name="description"
                maxlength="600"
                rows="5"
                style="resize: none"
            ></textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Hình ảnh</label>
            <input
                type="text"
                class="form-control"
                id="image"
                aria-describedby="emailHelp"
                name="image"
            />
        </div>
        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>