<div class="mt-4">
    <div class="py-4">
        <a href="/blogs/management"><- Trở lại</a>
    </div>
    <form method="POST" action="/blogs/update/{{blog._id}}?_method=PUT">
        <div class="mb-3">
            <label for="title" class="form-label">Tiêu đề</label>
            <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                maxlength="150"
                value="{{blog.title}}"
            />
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <textarea
                class="form-control"
                id="description"
                name="description"
                maxlength="600"
                rows="5"
                style="resize: none"
                value="{{blog.description}}"
            >{{blog.description}}</textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Hình ảnh</label>
            <input
                type="text"
                class="form-control"
                id="image"
                name="image"
                value="{{blog.image}}"
            />
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>