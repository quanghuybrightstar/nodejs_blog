<div class="mt-4">
    <div class="row g-3">
        {{#each blogs}}
            <div class="col-sm-6 col-lg-4">
                <div class="card">
                    <a href="/blogs/{{this.slug}}">
                        <img
                            src="{{this.image}}"
                            class="card-img-top"
                            alt="..."
                        />
                    </a>
                    <div class="card-body">
                        <a href="/blogs/{{this.slug}}">
                            <h5 class="card-title">{{this.title}}</h5>
                        </a>
                        <p class="card-text">{{this.description}}</p>
                        <a href="/blogs/{{this.slug}}" class="btn btn-primary">
                            Read more
                        </a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>